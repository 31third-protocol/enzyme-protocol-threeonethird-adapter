{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./build",
    "paths": {
      "~/*": ["src/*"]
    },
    "noUnusedLocals": false
  },
  "files": ["typings.d.ts"],
  "include": [
    "src/**/*",
    "tests/**/*.ts",
    "node_modules/@melonproject/token-math/src/bigInteger/bigint.d.ts"
  ]
}

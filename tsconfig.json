{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["esnext"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./build",
    "paths": {
      "~/*": ["src/*"],
      "@melonproject/token-math": ["node_modules/@melonproject/token-math/src"],
      "@melonproject/token-math/*": [
        "node_modules/@melonproject/token-math/src/*"
      ]
    }
  },
  "files": ["typings.d.ts"],
  "include": [
    "src/**/*",
    "tests/**/*.ts",
    "node_modules/@melonproject/token-math/src/bigInteger/bigint.d.ts"
  ]
}

# ignore log output
*.log

# ignore all dotfiles except the whitelisted ones
.*
!.env.example
!.changeset
!.husky
!.github
!.gitignore
!.gitattributes
!.prettierignore
!.prettierrc.js
!.eslintignore
!.solhint.json
!.chainId

# ignore build output and dependencies
codegen/
dist/
cache/
artifacts/
deployments/
coverage/
node_modules/

# allow previously ignored directories in special locations
!packages/codegen
!packages/coverage
!packages/hardhat/src/plugin/coverage

{
  "name": "@melonproject/release",
  "version": "2.0.0",
  "description": "Technology Regulated and Operated Investment Funds",
  "author": "Melon Council DAO <team@meloncouncil.io>",
  "license": "GPL-3.0",
  "homepage": "https://melonprotocol.com",
  "publishConfig": {
    "access": "public",
    "directory": "package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/protocol.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/protocol/issues"
  },
  "keywords": [
    "Defi",
    "Ethereum",
    "Melon",
    "Smart Contracts",
    "Solidity"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rimraf cache artifacts codegen package",
    "codegen": "crestproject codegen \"artifacts/*.json\" codegen",
    "compile": "buidler compile",
    "build": "yarn compile && yarn codegen && yarn package",
    "prepackage": "rimraf package",
    "package": "tsc && melon-copy-files && melon-copy-package",
    "test": "TS_JEST_DISABLE_VER_CHECKER=true yarn jest",
    "format": "prettier --write \"*.{sol,ts}\" \"{tests,contracts,utils}/{*,**/*}.{sol,ts}\"",
    "lint": "yarn lint:prettier && yarn lint:solhint",
    "lint:prettier": "prettier --list-different \"*.{sol,ts}\" \"{tests,contracts,utils}/{*,**/*}.{sol,ts}\"",
    "lint:solhint": "solhint --max-warnings 0 \"contracts/{*,**/*}.sol\"",
    "typecheck": "tsc --noEmit",
    "prepack": "melon-copy-package"
  },
  "dependencies": {
    "@melonproject/persistent": "^2.0.0",
    "@melonproject/utils": "^2.0.0"
  },
  "devDependencies": {
    "@crestproject/crestproject": "^0.0.37",
    "@nomiclabs/buidler": "^1.4.3",
    "@openzeppelin/contracts": "^3.1.0",
    "@types/jest": "^26.0.9",
    "ethers": "^5.0.8",
    "fs-extra": "^8.1.0",
    "jest": "^26.4.1",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.56",
    "rimraf": "^2.7.1",
    "solhint": "^3.1.0",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "@crestproject/crestproject": "^0.0.37",
    "@nomiclabs/buidler": "^1.4.3"
  },
  "jest": {
    "preset": "@crestproject/crestproject",
    "roots": [
      "<rootDir>/tests"
    ]
  }
}

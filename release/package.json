{
  "name": "@melonproject/release",
  "version": "2.0.0",
  "description": "Technology Regulated and Operated Investment Funds",
  "author": "Melon Council DAO <team@meloncouncil.io>",
  "license": "GPL-3.0",
  "homepage": "https://melonprotocol.com",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/protocol.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/protocol/issues"
  },
  "keywords": [
    "Defi",
    "Ethereum",
    "Melon",
    "Smart Contracts",
    "Solidity"
  ],
  "main": "dist/index.js",
  "module": "dist/mjs.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "cache",
    "contracts",
    "artifacts",
    "buidler.config.js"
  ],
  "scripts": {
    "clean": "rimraf cache artifacts codegen",
    "prepare": "yarn build",
    "codegen": "crestproject codegen \"artifacts/*.json\" codegen",
    "compile": "buidler compile",
    "build": "yarn compile && yarn codegen && tsdx build --entry index.ts",
    "test": "tsdx test",
    "lint": "yarn lint:prettier && yarn lint:solhint",
    "lint:prettier": "prettier --list-different \"*.{sol,ts}\" \"{tests,contracts,utils}/{*,**/*}.{sol,ts}\"",
    "lint:solhint": "solhint --max-warnings 0 \"contracts/{*,**/*}.sol\"",
    "format": "prettier --write \"*.{sol,ts}\" \"{tests,contracts,utils}/{*,**/*}.{sol,ts}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@crestproject/crestproject": "^0.0.47",
    "@melonproject/persistent": "^2.0.0",
    "@melonproject/utils": "^2.0.0",
    "ethers": "^5.0.13"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.5",
    "@openzeppelin/contracts": "^3.2.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "^4.3.0",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.57",
    "rimraf": "^3.0.2",
    "solhint": "^3.1.0",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "jest": {
    "preset": "@crestproject/crestproject"
  }
}

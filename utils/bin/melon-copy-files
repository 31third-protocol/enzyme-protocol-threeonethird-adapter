#!/usr/bin/env node

const fs = require('fs-extra');
const path = require('path');

const root = path.join(__dirname, '..', '..');
const pkg = process.cwd();
const out = path.join(pkg, 'package');

const copy = [
  path.join(root, 'LICENSE'),
  path.join(root, 'README.md'),
  path.join(root, 'CODE_OF_CONDUCT.md'),
  path.join(pkg, 'buidler.config.js'),
  path.join(pkg, 'contracts'),
  path.join(pkg, 'cache'),
  path.join(pkg, 'bin'),
].filter((file) => fs.existsSync(file));

copy.forEach((file) => fs.copySync(file, path.join(out, path.basename(file))));

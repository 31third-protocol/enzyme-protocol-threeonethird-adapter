{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:ava/recommended",
    "prettier"
  ],
  "plugins": [
    "flowtype",
    "ava"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [ "t" ]
      }
    ],
    "ava/no-ignored-test-files": [
      "warn"
    ],
    "prefer-destructuring": ["error", {
      "VariableDeclarator": {
        "array": true,
        "object": false
      },
      "AssignmentExpression": {
        "array": true,
        "object": false
      }
    }, {
      "enforceForRenamedProperties": false
    }]
  }
}

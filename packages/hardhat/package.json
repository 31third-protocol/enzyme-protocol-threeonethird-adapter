{
  "name": "@enzymefinance/hardhat",
  "version": "4.0.5",
  "private": true,
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js"
    },
    "./types": {
      "require": "./dist/types.js"
    },
    "./plugin": {
      "require": "./dist/plugin/index.js"
    },
    "./jest/config/setup": {
      "require": "./dist/jest/config/setup.js"
    },
    "./jest/config/environment": {
      "require": "./dist/jest/config/environment.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint \"src/**/*.{js,ts}\" --cache",
    "format": "yarn lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@enzymefinance/codegen": "4.0.5",
    "@enzymefinance/ethers": "4.0.5",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "deepmerge": "^4.2.2",
    "ethers": "^5.6.8",
    "fs-extra": "^10.1.0",
    "glob": "^7.2.0",
    "hardhat": "^2.9.2",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.4",
    "jest-diff": "^27.5.1",
    "jest-environment-node": "^27.5.1",
    "jest-matcher-utils": "^27.5.1",
    "jest-snapshot": "^27.5.1",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/types.ts",
      "src/jest/config/*.ts",
      "src/plugin/index.ts"
    ],
    "format": [
      "cjs"
    ],
    "dts": false,
    "splitting": true,
    "clean": true
  },
  "eslintConfig": {
    "extends": "@enzymefinance/eslint-config",
    "rules": {
      "@typescript-eslint/no-shadow": "off"
    },
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    }
  }
}
